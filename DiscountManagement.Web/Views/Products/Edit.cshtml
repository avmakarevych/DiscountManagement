@model DiscountManagement.Application.DTOs.ProductDTO

<h2>Створити новий продукт</h2>

<form method="post">
    <div>
        <label>Назва:</label>
        <input type="text" name="Name" required />
    </div>
    <div>
        <label>Ціна:</label>
        <input type="number" step="0.01" name="Price" required />
    </div>
    <div>
        <input type="submit" value="Створити" />
    </div>
</form>
