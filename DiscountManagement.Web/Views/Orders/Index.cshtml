@model IEnumerable<DiscountManagement.Application.DTOs.OrderDTO>

<h2>Список замовлень</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID замовлення</th>
            <th>ID клієнта</th>
            <th>Дата замовлення</th>
            <th>Загальна сума</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
                <td>
                    <a href="@Url.Action("Details", new { id = order.Id })">Деталі</a> |
                    <a href="@Url.Action("Edit", new { id = order.Id })">Редагувати</a> |
                    <a href="@Url.Action("Delete", new { id = order.Id })">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
